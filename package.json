{
  "name": "cursor-feedback",
  "displayName": "Cursor Feedback",
  "description": "Interactive feedback collection for AI agents in Cursor/VS Code - MCP Server with sidebar UI",
  "version": "0.1.25",
  "author": "jianger666",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jianger666/cursor-feedback-extension"
  },
  "keywords": [
    "mcp",
    "cursor",
    "vscode",
    "ai",
    "feedback",
    "model-context-protocol"
  ],
  "publisher": "jianger666",
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "bin": {
    "cursor-feedback-mcp": "./dist/mcp-server.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "cursorFeedback.showPanel",
        "title": "Show Feedback Panel",
        "category": "Cursor Feedback"
      },
      {
        "command": "cursorFeedback.startPolling",
        "title": "Start Listening for Feedback Requests",
        "category": "Cursor Feedback"
      },
      {
        "command": "cursorFeedback.stopPolling",
        "title": "Stop Listening",
        "category": "Cursor Feedback"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cursor-feedback",
          "title": "Cursor Feedback",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "cursor-feedback": [
        {
          "type": "webview",
          "id": "cursorFeedback.feedbackView",
          "name": "Feedback"
        }
      ]
    },
    "configuration": {
      "title": "Cursor Feedback",
      "properties": {
        "cursorFeedback.language": {
          "type": "string",
          "enum": ["zh-CN", "zh-TW", "en"],
          "default": "zh-CN",
          "description": "Interface language (zh-CN: 简体中文, zh-TW: 繁體中文, en: English)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "start:mcp": "node dist/mcp-server.js",
    "prepublishOnly": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.14.0"
  }
}
