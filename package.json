{
  "name": "cursor-feedback",
  "displayName": "Cursor Feedback",
  "description": "Save your Cursor monthly quota! Interactive feedback loop for AI chat - one conversation, unlimited interactions via MCP",
  "version": "1.0.9",
  "icon": "icon.png",
  "author": "jianger666",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jianger666/cursor-feedback-extension"
  },
  "keywords": [
    "mcp",
    "cursor",
    "vscode",
    "ai",
    "feedback",
    "model-context-protocol",
    "claude",
    "copilot",
    "ai-assistant",
    "interactive",
    "sidebar",
    "agent",
    "llm",
    "chatgpt",
    "anthropic",
    "save-quota",
    "unlimited-chat",
    "conversation",
    "human-in-the-loop"
  ],
  "publisher": "jianger666",
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "bin": {
    "cursor-feedback-mcp": "./dist/mcp-server.js"
  },
  "contributes": {
    "configuration": {
      "title": "Cursor Feedback",
      "properties": {
        "cursorFeedback.language": {
          "type": "string",
          "default": "auto",
          "enum": ["auto", "zh-CN", "en"],
          "enumDescriptions": [
            "Auto detect based on system language",
            "简体中文",
            "English"
          ],
          "description": "Language for the extension UI"
        }
      }
    },
    "commands": [
      {
        "command": "cursorFeedback.showPanel",
        "title": "Show Feedback Panel",
        "category": "Cursor Feedback"
      },
      {
        "command": "cursorFeedback.startPolling",
        "title": "Start Listening for Feedback Requests",
        "category": "Cursor Feedback"
      },
      {
        "command": "cursorFeedback.stopPolling",
        "title": "Stop Listening",
        "category": "Cursor Feedback"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cursor-feedback",
          "title": "Cursor Feedback",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "cursor-feedback": [
        {
          "type": "webview",
          "id": "cursorFeedback.feedbackView",
          "name": "Feedback"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-webview",
    "copy-webview": "mkdir -p dist/webview && cp src/webview/* dist/webview/ && mkdir -p dist/i18n && cp src/i18n/*.json dist/i18n/",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "start:mcp": "node dist/mcp-server.js",
    "prepublishOnly": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.14.0"
  }
}
