{
  "name": "cursor-feedback-extension",
  "displayName": "Cursor Feedback",
  "description": "Interactive feedback collection panel for AI agents in Cursor/VS Code",
  "version": "0.0.1",
  "publisher": "jianger666",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorFeedback.showPanel",
        "title": "Show Feedback Panel",
        "category": "Cursor Feedback"
      },
      {
        "command": "cursorFeedback.startServer",
        "title": "Start MCP Server",
        "category": "Cursor Feedback"
      },
      {
        "command": "cursorFeedback.stopServer",
        "title": "Stop MCP Server",
        "category": "Cursor Feedback"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cursor-feedback",
          "title": "Cursor Feedback",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "cursor-feedback": [
        {
          "type": "webview",
          "id": "cursorFeedback.feedbackView",
          "name": "Feedback"
        }
      ]
    },
    "configuration": {
      "title": "Cursor Feedback",
      "properties": {
        "cursorFeedback.serverPort": {
          "type": "number",
          "default": 8766,
          "description": "Port for the MCP server"
        },
        "cursorFeedback.autoStartServer": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MCP server on extension activation"
        },
        "cursorFeedback.language": {
          "type": "string",
          "enum": ["zh-CN", "zh-TW", "en"],
          "default": "zh-CN",
          "description": "Interface language"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "build:mcp": "tsc -p ./tsconfig.mcp.json",
    "start:mcp": "node dist/mcp-server.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.14.0"
  }
}
